pipeline {
  agent any
  environment {
    ARM_CLIENT_ID         = credentials('azure-sp')
    ARM_CLIENT_SECRET     = credentials('azure-sp')
    ARM_TENANT_ID         = credentials('azure-sp')
    ARM_SUBSCRIPTION_ID   = credentials('SUBSCRIPTION_ID')
  }
  stages {
    stage('Git checkout') {
      steps {
        git branch: 'main',
        url: 'https://github.com/HVAksh/Terraform.git'
      }
    }
    stage('Terraform Init') {
      steps {
        sh 'terraform init'
      }
    }
    // stage('Terraform Plan') {
    //   steps {
    //     sh 'terraform plan'
    //   }
    // }
    // stage('Terraform Apply') {
    //   steps {
    //     sh 'terraform apply -auto-approve'
    //   }
    // }
    // stage('Terraform Destroy') {
    //   when {
    //     expression { env.DESTROY == 'true' }
    //   }
      steps {
        sh 'terraform destroy -auto-approve'
      }
    }
  }
}
